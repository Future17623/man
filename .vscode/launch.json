{
    // 使⽤ IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "gcc.exe", // 该调试任务的名字，启动调试时会在待选列表中显⽰
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false, // 这⼀项控制是否在⼊⼝处暂停，默认false不暂停，改 为true暂停
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false, // 这⼀项控制是否启动外部控制台（独⽴的⿊框）运⾏程序，默认false表⽰在集成终端中运⾏
            "MIMode": "gdb",
            // "miDebuggerPath": "C:/mingw64/bin/gdb.exe", // 调试器路径，必须与你⾃⼰的电脑相符
            "setupCommands": [
                {
                    "description": "为 gdb 启⽤整⻬打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc.exe 生成活动文件" // 调试前的预执⾏任务，这⾥的值是tasks.json⽂件中对应的编译任务，也就是调试前需要先编译
        }
    ]
}